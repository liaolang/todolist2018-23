doctype html
html
  head
    title Wonderful list
    meta(name='viewport',content='width=device-width,initial-scale=1.0')
    link(rel='stylesheet',href='css/style.css')
    link(rel='stylesheet',href='https://fonts.googleapis.com/css?family=Sanchez')
  body
    header.header
      button(data-function='settings',class='settings-button',id='settings-button')
        .stripe
        .stripe
        .stripe
      h1 Wonderful list
    main
      .settings-panel
        form#settings
          h3 Sort tasks by
          .group.row
            input(id='sort-status',type='radio',name='sort',value='status' checked) 
            label(for='sort-status') Status
            input(id='sort-date',type='radio',name='sort',value='date') 
            label(for='sort-date') Date Added
      ul#task-list
    footer
      form#task-form.row
        input(id='task-input',type='text',placeholder='Type some things here')
        button(type='submit',id='task-button') Add
    script(src='js/main.js')
    // template buttons
    template#task-template
      li(data-id='',data-name='',data-status='')
        .task-row
          p.task-text
          .buttons
            button(class='task-action',data-function='status')
            button(class='task-action',data-function='delete')
      
    
