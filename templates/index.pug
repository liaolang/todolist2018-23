doctype html
html
  head

    meta(name='viewport',content='width=device-width,initial-scale=1.0')
    link(rel='stylesheet',href='css/style.css')
    link(rel='stylesheet',href='https://fonts.googleapis.com/css?family=Skranji')
  body
    header.header  
      img.logo(src='images/logo.png' width='70')
      h1 My Tasks
    main
      .settings-panel
        form#settings
           
      ul#task-list
    footer
      form#task-form.row
        input(id='task-input',type='text',placeholder='Type some things here', required)
        button(type='submit',id='task-button') [ADD]
    script(src='js/main.js')
    // template buttons
    template#task-template
      li(data-id='',data-name='',data-status='')
        .task-row
          p.task-text
          .buttons
            button(class='task-action',data-function='status')
            button(class='task-action',data-function='delete')
      
    
